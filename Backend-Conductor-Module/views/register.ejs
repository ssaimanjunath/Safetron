<html>
<head>
    <link rel="stylesheet" href="css/design-reg.css"/>  
    <title>register</title>  
      
     <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
</head>
    
<body background="images/bg-reg.jpg">  
  <div class="inner-container">    
    <div class="box">
      <h1>Register</h1>
        
        <%if (typeof value !== "undefined") {%>
            
            <% value.forEach(function(message){ %>
            <div class="alert alert-danger"><%= message.msg %></div>
            <% });%>
        <% }%>
        
      <form action="/register" method="post">
          <input type="text" placeholder="Username" name="username" required/>
          <input type="email" placeholder="email" name="email" required/>
          <input type="text" placeholder="phone number" name="phone" required/>          
          <input type="password" placeholder="Password" name="password" required/>         
          <input type="password" placeholder="confirm-Password" name="c_password" required/>
          <button type="submit">Register</button>
          <p>Already have an account? <a href="/"><span>Login</span></a></p>
      </form>
        
    </div>
  </div>
 
</body>